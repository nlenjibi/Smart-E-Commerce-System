<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.smartcommerce.controllers.UserController"
            prefHeight="600.0"
            prefWidth="1200.0"
            style="-fx-background-color: #f8f9fa;"
            stylesheets="@../../styles/common.css, @../../styles/users.css">

    <left>
        <fx:include source="sidebar.fxml" />
    </left>

    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="ðŸ‘¥ User Management"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Filter by Role:" style="-fx-font-size: 14px; -fx-text-fill: #374151;"/>
                <ComboBox fx:id="cmbRoleFilter" prefWidth="150" promptText="Select Role"/>
                <Button fx:id="btnRefresh" text="ðŸ”„ Refresh" styleClass="btn-secondary" onAction="#handleRefresh"/>
            </HBox>

            <!-- Form Section -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-border-width: 1;">
                <Label text="User Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #374151;"/>

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                    </columnConstraints>

                    <!-- Username -->
                    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                           style="-fx-font-size: 14px; -fx-text-fill: #374151;"/>
                    <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="0"
                               promptText="Enter username"
                               style="-fx-font-size: 14px; -fx-padding: 10;"/>

                    <!-- Email -->
                    <Label text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="0"
                           style="-fx-font-size: 14px; -fx-text-fill: #374151;"/>
                    <TextField fx:id="txtEmail" GridPane.columnIndex="3" GridPane.rowIndex="0"
                               promptText="Enter email address"
                               style="-fx-font-size: 14px; -fx-padding: 10;"/>

                    <!-- Password -->
                    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                           style="-fx-font-size: 14px; -fx-text-fill: #374151;"/>
                    <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   promptText="Enter password"
                                   style="-fx-font-size: 14px; -fx-padding: 10;"/>

                    <!-- Role -->
                    <Label text="Role:" GridPane.columnIndex="2" GridPane.rowIndex="1"
                           style="-fx-font-size: 14px; -fx-text-fill: #374151;"/>
                    <ComboBox fx:id="cmbRole" GridPane.columnIndex="3" GridPane.rowIndex="1"
                              promptText="Select role"
                              prefWidth="200"/>
                </GridPane>

                <!-- Buttons -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="btnAdd" text="âž• Add User" styleClass="btn-success" onAction="#handleAdd"/>
                    <Button fx:id="btnUpdate" text="âœï¸ Update User" styleClass="btn-primary" onAction="#handleUpdate"/>
                    <Button fx:id="btnDelete" text="ðŸ—‘ï¸ Delete User" styleClass="btn-danger" onAction="#handleDelete"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblStatus" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>

            <!-- Table Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-border-width: 1;" VBox.vgrow="ALWAYS">
                <Label text="All Users" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #374151;"/>

                <TableView fx:id="userTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 13px;">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="colUsername" text="Username" prefWidth="150"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="250"/>
                        <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
                        <TableColumn fx:id="colCreatedAt" text="Created At" prefWidth="180"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <Label text="ðŸ’¡ Click on a row to select and edit. Leave password empty when updating to keep existing password."
                       style="-fx-font-size: 12px; -fx-text-fill: #6b7280; -fx-font-style: italic;"/>
            </VBox>

        </VBox>
    </center>

</BorderPane>
